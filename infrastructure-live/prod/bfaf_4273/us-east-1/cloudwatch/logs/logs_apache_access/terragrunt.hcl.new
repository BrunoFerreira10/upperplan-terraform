include "root" {
  path = "${get_repo_root()}/terragrunt.hcl"
  expose = true
}

include "inputs" {
  path = "${get_repo_root()}/_env/cloudwatch_logs.hcl"
  expose = true
}

terraform {
  source    = "${include.root.locals.module_base_path}/management/cloudwatch//generic_log_group"
}

inputs = {
  env               = include.root.locals.env
  name              = "/ecs/apache_access"
  shortname         = include.locals.github_vars_mock.general_tag_shortname
  retention_in_days = 5
}